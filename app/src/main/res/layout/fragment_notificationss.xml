<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifications">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/png1"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/img1"
            android:text="Carpenting" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/png2"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/img1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_below="@+id/img2"
            android:text="Electric Work" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/png3"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/img1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/img3"
            android:text="Plumbing" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/png4"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/img2"
            android:layout_toRightOf="@id/img3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_below="@+id/img4"
            android:text="Home Paint" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/png5"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/img3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/img5"
            android:layout_marginTop="12dp"
            android:text="Home Cleaning" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/png6"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/img4"
            android:layout_toRightOf="@id/img5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_below="@+id/img6"
            android:text="Gardening" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:paddingLeft="10dp"
            android:src="@drawable/png7"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/img7"
            android:layout_marginTop="17dp"
            android:text="Pest Control" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/img8"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/img6"
            android:layout_toRightOf="@id/img7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="230dp"
            android:layout_below="@+id/img8"
            android:text="Pest Control" />

    </RelativeLayout>
</ScrollView>
