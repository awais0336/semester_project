<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    >


    <ImageView
        android:id="@+id/backb"
        android:layout_width="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="7dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:padding="5dp"
        />


    <ImageView

        android:id="@+id/fblogo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/fixify2"
        android:layout_centerInParent="true"
        android:paddingBottom="500dp"

        />


    <EditText
        android:hint="Email"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:textColorHint="@color/gray"
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="14dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundable"

        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/gray"
        android:background="@drawable/roundable"
        android:layout_marginLeft="14dp"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/editTextTextEmailAddress"
        android:layout_marginBottom="-50dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="289dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:text="Log In"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/fbblue"
        android:layout_centerInParent="true"
        />




    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up To Fixify"
android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:paddingBottom="176dp"
        android:textSize="14dp"
        android:layout_below="@+id/button"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mussa | Hasaan"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingBottom="30dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="cursive"

        />



</RelativeLayout>